doctype html
html
    head
        title #{process.env.APPNAME}
        include browser_dependencies.pug
        link(rel='stylesheet' href=`${process.env.CSS}/entrypoint.css`)
        script(src=`${process.env.SRC}/entrypoint.js`)
    body
        .jumbotron#region_header
            h1 #{process.env.APPNAME}
        nav.navbar.navbar-inverse#region_navbar
            .container-fluid
                ul.nav.navbar-nav
                    li#nav_briefing #[a(href='#') Briefing]
                    li#nav_content #[a(href='#') Content]
                    li#nav_authentication #[a(href='#') Authentication]
                    li#nav_send #[a(href='#') Send]
        .container-fluid#region_main
            #tab_briefing
            #tab_content
                #editor
                    include editor_default_text.json
            #tab_authentication
                form.form-horizontal
                    .form-group
                        label.control-label.col-sm-2(for='auth_host') Email Host:
                        .col-sm-10
                            input#auth_host.form-control(type='text', placeholder='Enter the hostname of the SMTP server to use.')
                    .form-group
                        label.control-label.col-sm-2(for='auth_port') Port:
                        .col-sm-10
                            input#auth_host.form-control(type='text', placeholder='Enter the port used by the SMTP server specified above.')
                    .form-group
                        label.control-label.col-sm-2(for='auth_secure') Secure
                        .col-sm-10
                            input#auth_secure(type='checkbox' value='')
                    .form-group
                        label.control-label.col-sm-2(for='auth_username') Username:
                        .col-sm-10
                            input#auth_username.form-control(type='text', placeholder='Enter your username for the SMTP server specified above.')
                    .form-group
                        label.control-label.col-sm-2(for='auth_pwd') Password:
                        .col-sm-10
                            input#auth_pwd.form-control(type='password', placeholder='Enter the password corresponding to your username above.')
            #tab_send
                .form.form-horizontal
                    .form-group
                        label.control-label.col-sm-2(for='send_address') Blast Address:
                        .col-sm-10
                            input#send_address.form-control(type='email', placeholder='Enter the email address to blast to.')
                    .form-group
                        .col-sm-2
                        .col-sm-10
                            button.btn.btn-danger(type='submit' value='') BLAST
